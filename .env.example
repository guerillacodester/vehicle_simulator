# ArkNet Transit Simulator - Environment Configuration
# Copy this file to .env and fill in your actual values
# This file documents all required and optional environment variables

# ============================================================================
# INFRASTRUCTURE & SERVICES
# ============================================================================

# Strapi CMS (Fleet Data API)
STRAPI_URL=http://localhost:1337
STRAPI_TOKEN=your-strapi-api-token-here
STRAPI_API_TOKEN=your-strapi-api-token-here

# GPS CentCom Server (Telemetry)
AUTH_TOKEN=your-gpscentcom-auth-token
STALE_AFTER_SEC=120
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# DATABASE - PostgreSQL with PostGIS
# ============================================================================

# Database connection (standard format)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=arknettransit
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-db-password

# PostgreSQL DSN (for services that support DSN connection string)
PG_DSN=postgresql://postgres:your-db-password@localhost:5432/arknettransit

# ============================================================================
# GEOSPATIAL SERVICE
# ============================================================================

# Geospatial service is accessed via HOST_SERVER
GEO_URL=http://localhost:6000
GEOCODE_CONCURRENCY=20

# ============================================================================
# SERVICES - API PORTS
# ============================================================================

# Host Server (orchestration layer)
ARKNET_HOST_HOST=0.0.0.0
ARKNET_HOST_PORT=6000

# Vehicle Simulator API
ARKNET_HOST_SIMULATOR_API_PORT=5001
SIMULATOR_API_PORT=5001

# GPS CentCom Server
GPS_SERVER_PORT=5000

# Commuter Service
COMMUTER_SERVICE_PORT=4000

# ============================================================================
# LOGGING
# ============================================================================

ARKNET_HOST_LOG_LEVEL=INFO
ARKNET_HOST_LOG_FILE=host_server.log

# ============================================================================
# SIMULATOR CONFIGURATION
# ============================================================================

# Simulation timing
SIMULATOR_TIME=2025-01-15T08:00:00

# Vehicle spawn configuration
ENABLE_BOARDING_AFTER=300.0

# Data API (used by simulator for fleet data)
DATA_API_URL=http://localhost:1337

# ============================================================================
# OPTIONAL: Windows Console Output (Windows only)
# ============================================================================

# Set ANSICON=1 if you want ANSI color codes in Windows console
# ANSICON=1

# ============================================================================
# NOTES
# ============================================================================
# - All services expect these variables to be set before startup
# - Database credentials are REQUIRED for geospatial and commuter services
# - Strapi token is REQUIRED for fleet data synchronization
# - GPS Auth token is REQUIRED for telemetry authentication
# - Services will fail startup if required variables are missing
# - Check logs/ directory for service-specific debug output
