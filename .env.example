# ArkNet Transit Simulator Environment Variables
# Copy to .env and modify for your deployment

# Strapi API Configuration (Production API Data Source)
ARKNET_API_URL=http://localhost:1337
STRAPI_API_TOKEN=your_api_token_here

# Legacy API Configuration
GTFS_API_URL=http://localhost:8000/api/v1
API_TIMEOUT=30

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Deployment Configuration
DEPLOYMENT_ENV=development
LOG_LEVEL=INFO

# Rock S0 Configuration (uncomment for Rock S0 deployment)
# IS_ROCK_S0=true
# GTFS_API_URL=http://backend-server:8000/api/v1
# UPLOAD_DIR=/var/lib/fleet-management/uploads
# LOG_LEVEL=WARNING

# Production Configuration (uncomment for production)
# DEPLOYMENT_ENV=production
# GTFS_API_URL=https://api.arknettransit.com/api/v1
# UPLOAD_DIR=/var/lib/fleet-management/uploads
# LOG_LEVEL=WARNING


# --- Console / Visualizer (Spawns Diagnostics) ---
# Strapi base URL for historic queries (console list_passengers)
STRAPI_URL=http://localhost:1337

# Postgres DSN for realtime LISTEN/NOTIFY (console stream_passenger_events and visualizer stream)
# Example: postgresql://user:password@host:5432/database
# PG_DSN=postgresql://postgres:postgres@localhost:5432/strapi

# Geospatial service base URL (optional; visualizer snapshot endpoints only)
GEO_URL=http://localhost:8001
