    "bakery": 7.0,
    "butcher": 5.0,
    "convenience": 8.0,
    "hairdresser": 4.0,
    "beauty": 4.0,
    
    "office": 5.0,
    "company": 6.0,
    "lawyer": 4.0,
    "insurance": 4.0,
    "estate_agent": 3.0,
    
    "park": 3.0,
