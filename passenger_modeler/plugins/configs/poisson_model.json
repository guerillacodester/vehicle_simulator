{
  "model_info": {
    "name": "Poisson Passenger Generation Model",
    "version": "1.0.0",
    "description": "Statistical model using Poisson distribution for discrete passenger arrivals",
    "author": "Arknet Transit Modeling Team",
    "statistical_basis": "Poisson distribution - ideal for modeling discrete events over time",
    "use_cases": [
      "Low to medium frequency passenger arrivals",
      "Independent passenger generation events",
      "Time-based passenger flow modeling"
    ]
  },
  
  "model_parameters": {
    "base_lambda": 8.5,
    "rate_variation": 0.15,
    "temporal_variance": 0.08,
    "max_passengers_per_interval": 150,
    "population_density_weight": 0.35,
    "accessibility_weight": 0.25,
    "stop_type_weights": {
      "bus_stop": 1.0,
      "hub": 2.5,
      "terminal": 3.0,
      "rail_station": 2.8,
      "ferry_terminal": 1.8
    }
  },
  
