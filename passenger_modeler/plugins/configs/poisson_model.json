  "time_patterns": {
    "early_morning": {
      "hours": [5, 6],
      "multiplier": 0.4,
      "description": "Early morning minimal activity",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 0.6,
        "holiday": 0.3
      }
    },
    "morning_commute": {
      "hours": [7, 8, 9],
      "multiplier": 3.2,
      "description": "Morning rush hour - work and school commute",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 0.4,
        "holiday": 0.2
      }
    },
    "late_morning": {
      "hours": [10, 11],
      "multiplier": 1.1,
      "description": "Late morning moderate activity",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 1.2,
        "holiday": 0.8
      }
    },
    "lunch_period": {
      "hours": [12, 13, 14],
      "multiplier": 1.6,
      "description": "Lunch time shopping and errands",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 1.3,
        "holiday": 1.1
      }
    },
    "afternoon_school": {
      "hours": [15, 16],
      "multiplier": 2.1,
      "description": "School dismissal and afternoon activities",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 0.6,
        "holiday": 0.3
      }
    },
    "evening_commute": {
      "hours": [17, 18, 19],
      "multiplier": 2.8,
      "description": "Evening rush hour - return home",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 0.7,
        "holiday": 0.4
      }
    },
    "evening_leisure": {
      "hours": [20, 21, 22],
      "multiplier": 1.3,
      "description": "Evening leisure and dining",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 1.5,
        "holiday": 1.2
      }
    },
    "night_minimal": {
      "hours": [23, 0, 1, 2, 3, 4],
      "multiplier": 0.2,
      "description": "Night time minimal activity",
      "day_adjustments": {
        "weekday": 1.0,
        "weekend": 1.8,
        "holiday": 0.8
      }
    }
  },
  
  "environmental_factors": {
    "weather_rain": {
      "type": "linear",
      "weight": -0.3,
      "description": "Rain reduces passenger generation"
    },
    "weather_temperature_extreme": {
      "type": "linear", 
      "weight": -0.2,
      "description": "Extreme temperatures reduce activity"
    },
    "special_event": {
      "type": "exponential",
      "weight": 0.5,
      "description": "Special events increase passenger flow"
    },
    "school_holiday": {
      "type": "linear",
      "weight": -0.4,
      "description": "School holidays reduce student travel"
    },
    "tourist_season": {
      "type": "linear",
      "weight": 0.3,
      "description": "Tourist season increases passenger activity"
    },
    "economic_activity": {
      "type": "linear",
      "weight": 0.2,
      "description": "Higher economic activity increases travel"
    }
  },
  
  "validation": {
    "lambda_range": {
      "min": 0.1,
      "max": 50.0,
      "description": "Valid range for Poisson lambda parameter"
    },
    "rate_constraints": {
      "min_base_rate": 0.1,
      "max_hourly_rate": 200.0,
      "max_interval_passengers": 150
    }
  },
  
  "calibration": {
    "data_sources": [
      "Barbados Transport Board ridership data",
      "OpenStreetMap amenity analysis", 
      "Field survey observations"
    ],
    "calibration_period": "2024-2025",
    "validation_metrics": {
      "chi_square_goodness_of_fit": "acceptable",
      "observed_vs_predicted_correlation": 0.78,
      "mean_absolute_error": 2.3
    }
  }
}