{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Depot Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/arknet_transit_simulator/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--mode", "depot", "--duration", "30"]
    },
    {
      "name": "Debug Basic Mode", 
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/arknet_transit_simulator/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--mode", "basic", "--duration", "30"]
    },
    {
      "name": "Debug Depot (Verbose)",
      "type": "debugpy",
      "request": "launch", 
      "program": "${workspaceFolder}/arknet_transit_simulator/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--mode", "depot", "--debug", "--duration", "60"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Strapi (Develop)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "develop"],
      "cwd": "${workspaceFolder}/arknet_fleet_manager/arknet-fleet-api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "timeout": 120000,
      "serverReadyAction": {
        "pattern": "Server listening",
        "uriFormat": "http://localhost:1337",
        "action": "debugWithChrome"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Strapi (Start)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "cwd": "${workspaceFolder}/arknet_fleet_manager/arknet-fleet-api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Strapi",
      "port": 9229,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "sourceMaps": true
    },
    {
      "name": "Debug Next.js App (Server)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/arknet_fleet_manager/dashboard",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "name": "Debug Next.js App (Client)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/arknet_fleet_manager/dashboard",
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Debug GPSCentCom Server",
      "program": "${workspaceFolder}/gpscentcom_server/server_main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": []
    },
    {
      "name": "Debug Fleet Manager Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/launcher/launch.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": []
    }
  ]
}