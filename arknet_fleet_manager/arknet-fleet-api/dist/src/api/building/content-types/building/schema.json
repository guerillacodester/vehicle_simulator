{
    "kind": "collectionType",
    "collectionName": "buildings",
    "info": {
        "singularName": "building",
        "pluralName": "buildings",
        "displayName": "Building",
        "description": "Building footprints from OpenStreetMap for passenger spawning (route/depot reservoirs)"
    },
    "options": {
        "draftAndPublish": false,
        "comment": "Building polygons used for realistic passenger spawning in route and depot reservoirs"
    },
    "pluginOptions": {},
    "attributes": {
        "building_id": {
            "type": "uid",
            "required": true,
            "unique": true
        },
        "osm_id": {
            "type": "biginteger",
            "required": true
        },
        "full_id": {
            "type": "string",
            "maxLength": 50
        },
        "building_type": {
            "type": "string",
            "maxLength": 100,
            "default": "yes"
        },
        "name": {
            "type": "string",
            "maxLength": 255
        },
        "addr_street": {
            "type": "string",
            "maxLength": 255
        },
        "addr_city": {
            "type": "string",
            "maxLength": 100
        },
        "addr_housenumber": {
            "type": "string",
            "maxLength": 50
        },
        "levels": {
            "type": "integer",
            "min": 1,
            "max": 200
        },
        "height": {
            "type": "decimal",
            "min": 0
        },
        "amenity": {
            "type": "string",
            "maxLength": 100
        },
        "country": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::country.country",
            "inversedBy": "buildings"
        }
    }
}
