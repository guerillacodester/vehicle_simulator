{
    "kind": "collectionType",
    "collectionName": "vehicle_events",
    "info": {
        "singularName": "vehicle-event",
        "pluralName": "vehicle-events",
        "displayName": "Vehicle Event",
        "description": "Hardware-triggered events from vehicle devices (GPS, sensors, RFID, etc.)"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "vehicle_id": {
            "type": "string",
            "required": true
        },
        "event_type": {
            "type": "enumeration",
            "enum": [
                "gps_position",
                "door_event",
                "rfid_tap",
                "passenger_count",
                "driver_confirm_boarding",
                "driver_confirm_alighting",
                "arrive_stop",
                "depart_stop"
            ],
            "required": true
        },
        "latitude": {
            "type": "decimal",
            "min": -90,
            "max": 90
        },
        "longitude": {
            "type": "decimal",
            "min": -180,
            "max": 180
        },
        "speed": {
            "type": "decimal",
            "min": 0
        },
        "heading": {
            "type": "decimal",
            "min": 0,
            "max": 360
        },
        "event_data": {
            "type": "json",
            "description": "Additional event-specific data (door_state, card_id, etc.)"
        },
        "timestamp": {
            "type": "datetime",
            "required": true
        }
    }
}
