{
    "kind": "collectionType",
    "collectionName": "active_passengers",
    "info": {
        "singularName": "active-passenger",
        "pluralName": "active-passengers",
        "displayName": "Active Passenger",
        "description": "Real-time passenger data for simulation - spawned commuters waiting/onboard/completed"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {
        "content-manager": {
            "visible": true
        },
        "content-type-builder": {
            "visible": true
        }
    },
    "attributes": {
        "passenger_id": {
            "type": "string",
            "required": true,
            "unique": true,
            "maxLength": 255
        },
        "route_id": {
            "type": "string",
            "required": true,
            "maxLength": 255
        },
        "depot_id": {
            "type": "string",
            "required": false,
            "maxLength": 255
        },
        "direction": {
            "type": "enumeration",
            "enum": ["OUTBOUND", "INBOUND"],
            "required": false
        },
        "latitude": {
            "type": "float",
            "required": true,
            "min": -90,
            "max": 90
        },
        "longitude": {
            "type": "float",
            "required": true,
            "min": -180,
            "max": 180
        },
        "destination_name": {
            "type": "string",
            "required": true,
            "default": "Destination",
            "maxLength": 255
        },
        "destination_lat": {
            "type": "float",
            "required": true,
            "min": -90,
            "max": 90
        },
        "destination_lon": {
            "type": "float",
            "required": true,
            "min": -180,
            "max": 180
        },
        "spawned_at": {
            "type": "datetime",
            "required": true
        },
        "expires_at": {
            "type": "datetime",
            "required": true
        },
        "boarded_at": {
            "type": "datetime",
            "required": false
        },
        "alighted_at": {
            "type": "datetime",
            "required": false
        },
        "status": {
            "type": "enumeration",
            "enum": ["WAITING", "ONBOARD", "COMPLETED", "EXPIRED"],
            "required": true,
            "default": "WAITING"
        },
        "priority": {
            "type": "integer",
            "required": true,
            "default": 3,
            "min": 1,
            "max": 5
        }
    }
}
