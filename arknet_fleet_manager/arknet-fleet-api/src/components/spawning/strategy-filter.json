{
  "collectionName": "components_spawning_strategy_filters",
  "info": {
    "displayName": "Strategy Filter",
    "description": "Feature types and buffer settings for a spawn strategy"
  },
  "options": {},
  "attributes": {
    "strategy_name": {
      "type": "enumeration",
      "enum": [
        "depot_based",
        "route_based",
        "poi_based",
        "zone_based",
        "building_based"
      ],
      "required": true
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "active_features": {
      "type": "json",
      "required": true,
      "default": []
    },
    "buffer_meters": {
      "type": "integer",
      "required": true,
      "default": 500,
      "min": 0,
      "max": 5000
    }
  }
}
