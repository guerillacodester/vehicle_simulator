{
  "name": "strapi-plugin-action-buttons",
  "version": "1.0.0",
  "description": "A Strapi plugin that provides custom action button fields with configurable handlers",
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    "./strapi-admin": {
      "types": "./dist/admin/src/index.d.ts",
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "strapi",
    "strapi-plugin",
    "custom-field",
    "action-button",
    "workflow",
    "automation"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "maintainers": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/strapi-plugin-action-buttons.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/strapi-plugin-action-buttons/issues"
  },
  "homepage": "https://github.com/yourusername/strapi-plugin-action-buttons#readme",
  "strapi": {
    "name": "action-buttons",
    "displayName": "Action Buttons",
    "description": "Add custom action button fields with configurable handlers to your content types",
    "kind": "plugin",
    "required": false
  },
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "verify": "strapi-plugin verify"
  },
  "dependencies": {
    "@strapi/design-system": "^2.0.0-rc.30",
    "@strapi/icons": "^2.0.0-rc.30",
    "react-intl": "^7.1.14"
  },
  "devDependencies": {
    "@strapi/strapi": "^5.29.0",
    "@strapi/sdk-plugin": "^5.3.2",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "styled-components": "^6.1.19",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@strapi/typescript-utils": "^5.29.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@strapi/strapi": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0 <=22.x.x",
    "npm": ">=6.0.0"
  }
}
