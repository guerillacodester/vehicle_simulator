{
  "kind": "collectionType",
  "collectionName": "stop_times",
  "info": {
    "singularName": "stop-time",
    "pluralName": "stop-times",
    "displayName": "Stop Time",
    "description": "Stop arrival/departure times for trips (GTFS stop_times.txt)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "trip": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::trip.trip",
      "inversedBy": "stop_times"
    },
    "stop": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::stop.stop",
      "inversedBy": "stop_times"
    },
    "arrival_time": {
      "type": "time",
      "required": false
    },
    "departure_time": {
      "type": "time",
      "required": false
    },
    "stop_sequence": {
      "type": "integer",
      "required": true
    },
    "stop_headsign": {
      "type": "string",
      "required": false
    },
    "pickup_type": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 3
    },
    "drop_off_type": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 3
    },
    "continuous_pickup": {
      "type": "integer",
      "default": 1,
      "min": 0,
      "max": 3
    },
    "continuous_drop_off": {
      "type": "integer",
      "default": 1,
      "min": 0,
      "max": 3
    },
    "shape_dist_traveled": {
      "type": "decimal",
      "required": false
    },
    "timepoint": {
      "type": "integer",
      "default": 1,
      "min": 0,
      "max": 1
    },
    "is_active": {
      "type": "boolean",
      "default": true
    }
  }
}
