{
  "kind": "collectionType",
  "collectionName": "drivers",
  "info": {
    "singularName": "driver",
    "pluralName": "drivers",
    "displayName": "Driver",
    "description": "Drivers in the fleet management system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "driver_id": {
      "type": "uid",
      "required": true,
      "targetField": "name"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "license_no": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "employment_status": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive",
        "suspended",
        "terminated"
      ],
      "default": "active",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": false
    },
    "hire_date": {
      "type": "date",
      "required": false
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "inversedBy": "drivers"
    },
    "home_depot": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::depot.depot",
      "inversedBy": "drivers"
    },
    "assigned_vehicles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vehicle.vehicle",
      "mappedBy": "assigned_driver"
    }
  }
}
