{
  "kind": "collectionType",
  "collectionName": "countries",
  "info": {
    "singularName": "country",
    "pluralName": "countries",
    "displayName": "Country",
    "description": "Countries in the fleet management system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "country_id": {
      "type": "uid",
      "required": true,
      "targetField": "name"
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 3
    },
    "currency": {
      "type": "string",
      "required": false,
      "maxLength": 3
    },
    "timezone": {
      "type": "string",
      "required": false
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "routes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::route.route",
      "mappedBy": "country"
    },
    "vehicles": {
      "type": "relation",
      "relation": "oneToMany", 
      "target": "api::vehicle.vehicle",
      "mappedBy": "country"
    },
    "drivers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::driver.driver", 
      "mappedBy": "country"
    },
    "depots": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::depot.depot",
      "mappedBy": "country"
    },
    "pois": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::poi.poi",
      "mappedBy": "country"
    },
    "landuse_zones": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::landuse-zone.landuse-zone",
      "mappedBy": "country"
    },
    "regions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::region.region",
      "mappedBy": "country"
    },
    "spawn_config": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::spawn-config.spawn-config",
      "mappedBy": "country"
    }
  }
}