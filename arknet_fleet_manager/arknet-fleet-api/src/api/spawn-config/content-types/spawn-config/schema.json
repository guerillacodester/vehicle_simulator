{
  "kind": "collectionType",
  "collectionName": "spawn_configs",
  "info": {
    "singularName": "spawn-config",
    "pluralName": "spawn-configs",
    "displayName": "Spawn Configuration",
    "description": "Simple, intuitive passenger spawning configuration with separate tables per feature category"
  },
  "options": {
    "draftAndPublish": false,
    "comment": "Clean separation: Buildings, POIs, Landuse in separate collapsible sections"
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text"
    },
    "building_weights": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.building-weight"
    },
    "poi_weights": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.poi-weight"
    },
    "landuse_weights": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.landuse-weight"
    },
    "hourly_spawn_rates": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.hourly-pattern"
    },
    "day_multipliers": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.day-multiplier"
    },
    "distribution_params": {
      "type": "component",
      "repeatable": true,
      "component": "spawning.distribution-params",
      "required": true,
      "max": 1
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "country": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::country.country",
      "inversedBy": "spawn_config"
    }
  }
}
