{
  "kind": "collectionType",
  "collectionName": "cms_drivers",
  "info": {
    "singularName": "driver",
    "pluralName": "drivers",
    "displayName": "Driver",
    "description": "Transit system drivers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "license_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive",
        "suspended",
        "retired"
      ],
      "default": "active"
    },
    "vehicles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::vehicle.vehicle",
      "mappedBy": "driver"
    }
  }
}